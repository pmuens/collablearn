.row
  .span5.offset3
    .page-header
      %h1
        Passwort vergessen?
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' } ) do |f|
      = render 'shared/error_messages', object: resource
      .control-group
        %label.control-label{for: 'email'}
          E-Mail
        .controls
          = f.email_field :email, id: 'email'
      .control-group
        .controls
          = f.submit 'Ich habe mein Passwort vergessen', disable_with: 'Ich habe mein Passwort vergessen', class: 'btn btn-primary'