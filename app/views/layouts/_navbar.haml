.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      = link_to 'Collablearn', :root, class: 'brand'
      %ul.nav.pull-right
        - if logged_in?
          %li.dropdown
            %a(href='#' class='dropdown-toggle' data-toggle='dropdown')
              = current_user.email
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to raw('<i class="icon-wrench"></i> Einstellungen'), edit_user_path(current_user)
              %li
                = link_to raw('<i class="icon-off"></i> Logout'), logout_path
        - else
          %li.dropdown
            %a(href='#' class='dropdown-toggle' data-toggle='dropdown')
              Login
              %b.caret
            %ul.dropdown-menu
              = form_for(:session, url: sessions_path) do |f|
                %p
                  E-Mail
                .controls
                  = f.text_field :email
                %p
                  Passwort
                .controls
                  = f.password_field :password
                .controls
                  = f.submit 'Login', disable_with: 'Login', class: 'btn btn-primary'